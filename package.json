services:
  - type: web
    name: driver-comm
    env: node
    plan: starter
    buildCommand: "npm install"
    startCommand: "npm run start"
    autoDeploy: true

    # mount a persistent disk directly on the service
    disk:
      name: db-data
      mountPath: /opt/render/project/src/data
      sizeGB: 1

    envVars:
      - key: NODE_ENV
        value: production
      - key: TWILIO_ACCOUNT_SID
        sync: false
      - key: TWILIO_AUTH_TOKEN
        sync: false
      - key: TWILIO_MESSAGING_SERVICE_SID
        sync: false
      - key: TWILIO_FROM
        sync: false
      - key: SMTP_HOST
        sync: false
      - key: SMTP_PORT
        sync: false
      - key: SMTP_USER
        sync: false
      - key: SMTP_PASS
        sync: false
      - key: FROM_EMAIL
        sync: false
      - key: BASE_URL
        sync: false
